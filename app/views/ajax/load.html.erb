<% if params[:online] && @online_users.length > 0 %>
    <%= render :partial => 'chat/online' %>
<% end %>

<% if params[:messages] %>
    <%= render :partial => 'chat/messages' %>
<% end %>

<% if params[:created_games] %>
    var created_games = $("#created_area").empty();
    created_games.append("<%= escape_javascript(render :partial => 'room/created_games') %>");
<% end %>

<% if params[:reload] && current_user.game && current_user.game.status == "in_progress" %>
    location.reload();
<% end %>

<% if params[:game] %>
    var game = $("#game_area").empty();
    game.append("<%= escape_javascript(render :partial => 'game/gameboard') %>");
<% end %>